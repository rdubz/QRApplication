<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.biofire.qrtestapplication.MainActivity"
    android:background="@drawable/backgroung_gradient">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/bfd_bmx_whiteduotone_corner"
        android:layout_weight="3.94" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/innerActivity_main"
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <Button
            android:text="Click To Scan"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/round_button_layout"
            android:textColor="@android:color/white"
            android:id="@+id/scanButton"
            android:layout_weight="1"
            android:textSize="18sp"
            android:onClick="onClickListener"
            />

    </LinearLayout>

</LinearLayout>


